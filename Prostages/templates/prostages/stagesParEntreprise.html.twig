{% extends 'base.html.twig' %}

{% block body %}

<!-- Tableau Bootstrap -->
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <!-- Titres des colonnes -->
      <th scope="col">Titre</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Formations</th>
    </tr>
  </thead>
  <tbody>
    {% for stage in stages %}
    <tr>
      <!-- Contenu des colonnes -->
      <td><a href="{{path('prostages_stages', {id:stage.id})}}"> {{stage.titre}} </a></td>
      <td><a href="{{path('prostages_stagesParE', {id:stage.entreprise.id})}}"> {{stage.entreprise.nom}} </a></td>
      <td>
            <!-- Boucle pour afficher toutes les formations concernÃ©es par le stage -->
            {% for formation in stage.getFormations %}
            <a href="{{path('prostages_stagesParF', {id:formation.id})}}">{{formation.Libelle}} / </a>
            {% endfor %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
