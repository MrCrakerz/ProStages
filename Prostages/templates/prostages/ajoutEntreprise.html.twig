					{{ form_row(vueFormulaireEntreprise.adresse, {'attr':{'placeholder':"Adresse de l'entreprise ..."}})}}
					{{ form_row(vueFormulaireEntreprise.activite, {'attr':{'placeholder':"Activite de l'entreprise ..."}})}}
					{{ form_row(vueFormulaireEntreprise.site, {'attr':{'placeholder':"Site de l'entreprise..."}})}}
					<button type="submit" class="btn btn-dark">Enregistrer</button>
					<br>
					{{ form_end(vueFormulaireEntreprise) }}
				</div
				</div>
				<div class="col-md-4">
				</div>
			</div>

{% endblock %}
