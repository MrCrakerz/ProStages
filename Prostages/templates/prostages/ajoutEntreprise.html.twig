{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
				<div class="col-md-4">
				</div>
                <div class="col-md-4">
                 <div class="example-wrapper">
					<h1>Ajout Entreprise</h1>
					{{ form_start(vueFormulaireEntreprise, {'attr': {'novalidate' : 'novalidate'}}) }}
