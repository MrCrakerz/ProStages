{% extends 'base.html.twig' %}

{% block title %}Liste des Formations{% endblock %}

{% block body %}
    <h1>Liste des Formations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>NomLong</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.libelle }}</td>
                <td>{{ formation.nomLong }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Cr√©er une nouvelle formation</a>
{% endblock %}
